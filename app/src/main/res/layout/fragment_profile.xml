<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    tools:context="com.philippegerbeau.pocketcamping.activities.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/green"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:background="@color/colorPrimary">

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/colorBackground">
            </View>

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Namour"
                android:textSize="@dimen/text_header"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"/>

            <android.support.v7.widget.CardView
                android:layout_width="206dp"
                android:layout_height="206dp"
                app:cardCornerRadius="103dp"
                android:layout_centerHorizontal="true"
                android:elevation="12dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                android:layout_above="@+id/username"
                android:layout_marginBottom="16dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryLight">

                    <android.support.v7.widget.CardView
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="3dp"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        card_view:cardElevation="0dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="100dp"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:src="@drawable/platy"
                            android:scaleType="centerCrop"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            tools:ignore="ContentDescription">
                        </ImageView>

                    </android.support.v7.widget.CardView>

                </FrameLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLight">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rien de prÃ©vu pour l'instant"
                    android:textColor="#808080"
                    android:textSize="@dimen/text_sub_header"
                    android:padding="20dp"
                    android:layout_gravity="center"/>

            </FrameLayout>



        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
